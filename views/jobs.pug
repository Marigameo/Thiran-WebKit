    .container
      br
      .card
        .card-header
          
          | Jobs made easy
          i.material-icons golf_course
        .card-body
          h5.card-title 
            | Art of purifying the inferior engineering minds
          
          
          p.card-text Grab job opportunities from our portal
          
          a.btn.btn-outline-primary(href='/projects/gems_profile1' target='_blank') Add my profile
            i.fa.fa-heartbeat

      br
      h4.text-dark Jobs Bucket - filter your dream jobs
      br
      ul.list-group
        each job, i in jobs
          li.list-group-item
            .alert.alert-primary(role='alert')
              p.alert-heading
                if job.company_name && job.company_name!="not mentioned" || job.job_title && job.job_title!="not mentioned" 
                  h3 #{job.job_title} 
                    br
                    a(href="#")= job.company_name 
                    span , #{job.domain} organisation is hiring now ! .
                    br
                    small You will be working in #{job.edu1} shifts pattern of routines
                br
                if job.job_description && job.job_description!="not mentioned" 
                  span About job :
                  div.text-info  #{job.job_description}
                p 
                if job.location && job.location!="not mentioned" 
                  small Location : 
                  small.text-info #{job.location}
                br
              
              p
                if job.emp_type=="1"
                  small.text-info Full time job with an avg salary of #{job.salary} 
                  if job.edu1 && job.edu1!="not mentioned"
                    span.text-primary [#{job.edu1} shifts]
                else if job.emp_type=="2"
                  small.text-info Part-time job(*conditions apply) with avg.salary #{job.salary}
                  if job.edu1 && job.edu1!="not mentioned"
                    span.text-primary [#{job.edu1} shifts]
                else if job.emp_type == "3"
                  small.text-info You will be working under a contract of #{job.job_duration}
                  if job.edu1 && job.edu1!="not mentioned"
                    span.text-primary [#{job.edu1} shifts]
                else if job.emp_type =="4"
                  small.text-info Temporary job for #{job.job_duration}.Later you may be considered based upon the performance.
                  if job.edu1 && job.edu1!="not mentioned"
                    span.text-primary [#{job.edu1} shifts]
                else if job.emp_type =="5"
                  small.text-info Voulnteer based job posting.You will working for free(*certificates will be provided) for a period of #{job.job_duration}
                  if job.edu1 && job.edu1!="not mentioned"
                    span.text-primary [#{job.edu1} shifts]
                else if job.emp_type =="6"
                  small.text-info Internship for a term of #{job.job_duration}
                  if job.edu1 && job.edu1!="not mentioned"
                    span.text-primary [#{job.edu1} shifts]
              p
                  
                if job.job_function && job.job_function!="not mentioned" 
                  small You will be working with cutting edge technologies!
                  div.text-secondary #{job.job_function}
              p
                if job.application == "1"
                  small.text-secondary Send your resumes to #{job.email}
                else if job.application == "2" || job.application=="3"
                  small.text-secondary You can now apply through this link 
                  a(href = job.url) #{job.url}
                else if job.application == "4"
                  div.text-primary Send your resumes to us at #{job.postal_address}
                  small.text-secondary Contact - #{job.phoneno}
              hr
              p
                if job.arrear && job.arrear=="on" 
                  span.text-warning *There should be no history of arrears
                else 
                  span.text-warning *Anyone independant of the department and arrear history can attend
          
              p
                if job.cgpa && job.cgpa!="not mentioned" 
                  small CGPA is taken into account,Minimum of atleast  
                  span.text-secondary #{job.min_cgpa } is required
                br
                if job.freshers && job.freshers =="on"
                  span *Freshers are also welcomed
                else
                  span *Seniority : #{job.seniority}
              hr
              
                  
              p.mb-0
                button(class='btn btn-outline-primary upvote' data-id=job._id)
                  i.fa.fa-thumbs-o-up
                  |  Follow
                  
                button(class='btn btn-default upvote_cnt-'+job._id)
            
                a(class='btn btn-outline-primary upvote' href="/projects/interview_call" style="margin:10px;")
                  i.fa.fa-thumbs-o-up
                  |  Ping friends
                a(class='btn btn-outline-primary upvote' href="/forum/profile/"+job._id style="margin:10px;")
                  i.fa.fa-thumbs-o-up
                  |  Save for Later
                
                 
                
            
          
            
