                  small Interned at :
                  span.text-secondary #{profile.intern_company}
                  hr
                p
                if profile.accomplishments==1 && profile.title && profile.title!="not defined"
                  span.text-primary Completed Certification : #{profile.title}
                  br 
                  div.text-secondary #{profile.role_description}
                  br
                else if profile.accomplishments==2 && profile.title && profile.title!="not defined"
                  span.text-primary Own a patent : #{profile.title}
                  br
                  div.text-secondary #{profile.role_description}
                  br
                  span.text-primary Authorised by : #{profile.publisher}
                else if profile.accomplishments==3 && profile.title && profile.title!="not defined"
                  span.text-primary Course completed : #{profile.title}
                  br
                  div.text-secondary #{profile.role_description}
                  br
                  span.text-info Duration : #{profile.duration}
                else if profile.accomplishments==4 && profile.title && profile.title!="not defined"
                  span.text-primary Project Title : #{profile.title}
                  br
                  div.text-secondary #{profile.role_description}
                  br
                  span.text-primary Mentor name : #{profile.mentor_name}
                  br
                  div.text-secondary #{profile.mentor_description}
                else if profile.accomplishments==5 && profile.title && profile.title!="not defined"
                  span.text-primary Award Received : #{profile.title}
                  br
                  div.text-secondary #{profile.role_description} 
                  br
                  span.text-primary Issued by : #{profile.issuer}
                else if profile.accomplishments==6 && profile.title && profile.title!="not defined"
                  span.text-primary Test cleared : #{profile.title}
                  br
                  div.text-secondary #{profile.role_description} 
                  br
                  p.text-danger #{profile.score}
                else if profile.accomplishments==6 && profile.score && profile.score!="not defined"
                  span.text-primary Additional Language : #{profile.title}
                  br
                  div.text-secondary #{profile.role_description} 
                  br
                  div.text-warning #{profile.lang_prof}
                else if profile.accomplishments==8 && profile.company_name && profile.company_name!="not defined" 
